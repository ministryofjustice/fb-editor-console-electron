{
  "name": "@ministryofjustice/fb-editor-console-electron",
  "version": "0.6.0",
  "description": "Form Builder Console",
  "main": "./main.js",
  "scripts": {
    "start": "DEBUG=transformers* electron .",
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack\"",
    "build:watch": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build:watch\" \"webpack --watch\"",
    "build:fonts": "npm run gulp -- build:fonts",
    "build:fonts:watch": "npm run gulp -- build:fonts:watch",
    "build:images": "npm run gulp -- build:images",
    "build:images:watch": "npm run gulp -- build:images:watch",
    "build:js": "webpack",
    "build:js:watch": "npm run build:js -- --watch",
    "build:css": "npm run gulp -- build:css",
    "build:css:watch": "npm run gulp -- build:css:watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint . build src lib test --ext .js,.html",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "mocha test --recursive --require @ministryofjustice/module-alias/register",
    "transform": "npm run gulp -- transform",
    "gulp": "gulp --color",
    "pre-commit": "npm run lint && npm test && npm run build && npm run transform && git add assets *.html",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Form Builder Team <form-builder-team@digital.justice.gov.uk>",
  "repository": "https://github.com/ministryofjustice/fb-editor-console-electron",
  "license": "MIT",
  "keywords": [
    "Electron",
    "Form Builder"
  ],
  "dependencies": {
    "@ministryofjustice/fb-transformers": "^1.0.7",
    "cross-env": "^7.0.2",
    "electron-better-ipc": "^1.1.1",
    "electron-store": "^6.0.1",
    "electron-timber": "^0.5.1",
    "find-process": "^1.4.4",
    "glob-all": "^3.2.1",
    "govuk-frontend": "^3.8.1",
    "isomorphic-git": "1.7.8",
    "open": "^7.3.0",
    "ospath": "^1.2.2",
    "path-exists": "^4.0.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "rimraf": "^3.0.2",
    "sacred-fs": "^1.2.1",
    "selective-whitespace": "^1.0.4",
    "shelljs": "^0.8.4",
    "simple-git": "^2.21.0",
    "strip-ansi": "^6.0.0",
    "yargs-parser": "^20.2.3"
  },
  "devDependencies": {
    "@ministryofjustice/module-alias": "^1.0.18",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "del": "^6.0.0",
    "electron": "^9.3.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.3.0",
    "mocha": "^8.2.0",
    "postcss-normalize": "^9.0.0",
    "postcss-scss": "^3.0.2",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.18.0",
    "terser-webpack-plugin": "^5.0.3",
    "vinyl-paths": "^3.0.1",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.2.0"
  },
  "productName": "Form Builder Console",
  "_moduleAliases": {
    "~": ".",
    "~/test": "./test",
    "~/mock": "./test/.mock"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
