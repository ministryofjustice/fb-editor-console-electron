{
  "name": "@ministryofjustice/fb-editor-console-electron",
  "version": "0.5.22",
  "description": "Form Builder Console",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "build": "cross-env NODE_ENV=production concurrently -r \"npm run gulp -- build\" \"webpack\"",
    "build:watch": "npm run gulp -- build:watch",
    "build:fonts": "npm run gulp -- build:fonts",
    "build:fonts:watch": "npm run gulp -- build:fonts:watch",
    "build:images": "npm run gulp -- build:images",
    "build:images:watch": "npm run gulp -- build:images:watch",
    "build:js": "webpack",
    "build:js:watch": "npm run build:js -- --watch",
    "build:css": "npm run gulp -- build:css",
    "build:css:watch": "npm run gulp -- build:css:watch",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint . --ext .js,.html",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/sass",
    "lint:css:fix": "npm run lint:css -- --fix",
    "test": "mocha test --recursive --require @ministryofjustice/module-alias/register",
    "transform": "npm run gulp -- transform",
    "gulp": "gulp --color",
    "pre-commit": "npm run build && npm run transform && git add assets *.html"
  },
  "author": "Form Builder Team <form-builder-team@digital.justice.gov.uk>",
  "repository": "https://github.com/ministryofjustice/fb-editor-console-electron",
  "license": "MIT",
  "keywords": [
    "Electron",
    "Form Builder"
  ],
  "dependencies": {
    "cross-env": "^6.0.3",
    "electron": "^7.1.7",
    "electron-better-ipc": "^0.7.0",
    "electron-store": "^5.1.0",
    "electron-timber": "^0.5.1",
    "find-process": "^1.4.3",
    "github-api": "^3.3.0",
    "glob": "^7.1.6",
    "govuk-frontend": "^3.4.0",
    "isomorphic-git": "^0.72.1",
    "open": "^7.0.0",
    "ospath": "^1.2.2",
    "path-exists": "^4.0.0",
    "request-promise-native": "^1.0.8",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "strip-ansi": "^6.0.0",
    "yargs-parser": "^16.1.0"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-fb": "^1.1.6",
    "@ministryofjustice/module-alias": "^1.0.8",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.0.2",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "electron-packager": "^14.1.1",
    "eslint-plugin-html": "^6.0.0",
    "glob-all": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-css-purge": "^3.0.9",
    "gulp-debug": "^4.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^3.1.0",
    "mocha": "^7.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-scss": "^2.0.0",
    "proxyquire": "^2.1.3",
    "sacred-fs": "^1.0.14",
    "sinon": "^8.0.4",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "terser-webpack-plugin": "^2.3.1",
    "vinyl-paths": "^3.0.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "productName": "Form Builder Console",
  "_moduleAliases": {
    "~": ".",
    "~/test": "./test",
    "~/mock": "./test/.mock"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
